---
layout: layouts/base.njk
---
<div id="content">
  <div class="page-block is-magenta has-slope-after">
    <div class="section">
      <div class="container">
        <div class="a4-page">
          <div class="content">{{ content | safe }}</div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="page-block is-paper is-inbetween">
    <div class="section">
      <div class="container">
        <ul>
          {% for post in collections.post %}
          <li>
            {# <a href="{{.Permalink}}">{{.Date.Format "2006-01-02"}} | {{.Title}}</a> #}
            <a href="{{ post.url }}"> {{ post.data.subtitle }}</a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

<footer class="page-footer is-paper">
  <p>
    Made by
    <a href="https://t.r0b.io">@robbb_j</a>
    and
    <a href="https://github.com/robb-j/r0b-blog">Open Source</a>
  </p>
</footer>